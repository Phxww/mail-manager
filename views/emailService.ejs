<% extend('./layouts/layout') %>

<div>
  <form action="/emailService" method="POST" enctype="multipart/form-data">  
    <div class="form-group">
        <label for="toUser">收件者</label>
        <input
            type="email"
            class="form-control"
            id="toUser"
            name="toUser"
            placeholder="abc@gmail.com"
            required
        />
    </div>
    <div class="form-group">
        <label for="subject">主旨</label>
        <input
            type="text"
            class="form-control"
            id="subject"
            name="subject"
        />
    </div>

    <div class="form-group">
        <label for="summernote"">信件內容</label>
        <textarea id="summernote" name="editordata"></textarea>
    </div>
    <div id="upoload-list">
      <button id="createBtn" name="createBtn" class="btn btn-primary my-3">新增上傳檔案</button> <br> 
    </div>
    <button id="submit" type="submit" class="btn btn-primary my-3">送出</button>
  </form>

</div>

<script>
  $(document).ready(function ()
  {
    var btnCnt = 0;
    $('#createBtn').click(function(event){
      event.preventDefault();
      $('#createBtn').after(` <div class="my-2"><input type="file"  multiple name="filetoupload${btnCnt}"> <a href="#"  class="deleteBtn ">X</a></div>`);
      btnCnt ++;
     
    });

    $("#upoload-list").on('click','.deleteBtn',function(event){
      event.preventDefault();
      $(this).parent().remove();
      console.log('deleteBtn');
    });

    $('#summernote').summernote({
        height: 200, 
    });
    

  });
</script>
